{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "./resources/js/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}